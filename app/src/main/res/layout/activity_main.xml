<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/firstTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="28dp"
        android:gravity="right"
        android:textStyle="bold"
        android:background="@color/teal_200"
     />

    <TextView
        android:id="@+id/secondTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/teal_700"
        android:gravity="right"
        android:textSize="30dp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:weightSum="4">
    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="%"
        android:layout_marginRight="5dp"
        android:textStyle="bold"
        android:textSize="50dp">
    </Button>
    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="CE"
        android:layout_marginRight="5dp"
        android:textStyle="bold"
        android:textSize="50dp">
    </Button>
    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="C"
        android:layout_marginRight="5dp"
        android:textStyle="bold"
        android:textSize="50dp">
    </Button>
    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="D"
        android:textStyle="bold"
        android:textSize="50dp">
    </Button>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:weightSum="4">
    <Button
        android:id="@+id/sevenButtonID"
        android:onClick="digitFunction"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="7"
        android:textStyle="bold"
        android:layout_marginRight="5dp"
        android:textSize="50dp">
    </Button>
    <Button
        android:id="@+id/eightButtonID"
        android:onClick="digitFunction"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="8"
        android:textStyle="bold"
        android:layout_marginRight="5dp"
        android:textSize="50dp">
    </Button>
    <Button
        android:id="@+id/nineButtonID"
        android:onClick="digitFunction"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="9"
        android:layout_marginRight="5dp"
        android:textStyle="bold"
        android:textSize="50dp">
    </Button>
    <Button
        android:id="@+id/multiButtonID"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="*"
        android:textStyle="bold"
        android:textSize="50dp">
    </Button>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:weightSum="4">
    <Button
        android:id="@+id/fourButtonID"
        android:onClick="digitFunction"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="4"
        android:layout_marginRight="5dp"
        android:textStyle="bold"
        android:textSize="50dp">
    </Button>
    <Button
        android:id="@+id/fiveButtonID"
        android:onClick="digitFunction"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="5"
        android:layout_marginRight="5dp"
        android:textStyle="bold"
        android:textSize="50dp">
    </Button>
    <Button
        android:id="@+id/sixButtonID"
        android:onClick="digitFunction"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="6"
        android:layout_marginRight="5dp"
        android:textStyle="bold"
        android:textSize="50dp">
    </Button>
    <Button
        android:id="@+id/subButtonID"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="-"
        android:textStyle="bold"
        android:textSize="50dp">
    </Button>

</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:weightSum="4">
    <Button
        android:id="@+id/oneButtonID"
        android:onClick="digitFunction"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="1"
        android:layout_marginRight="5dp"
        android:textStyle="bold"
        android:textSize="50dp">
    </Button>
    <Button
        android:id="@+id/twoButtonID"
        android:onClick="digitFunction"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="2"
        android:layout_marginRight="5dp"
        android:textStyle="bold"
        android:textSize="50dp">
    </Button>
    <Button
        android:id="@+id/threeButtonID"
        android:onClick="digitFunction"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="3"
        android:layout_marginRight="5dp"
        android:textStyle="bold"
        android:textSize="50dp">
    </Button>
    <Button
        android:id="@+id/addButtonID"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="+"
        android:textStyle="bold"
        android:textSize="50dp">
    </Button>

</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:weightSum="4">
    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="+/-"
        android:layout_marginRight="5dp"
        android:textStyle="bold"
        android:textSize="30dp">
    </Button>
    <Button
        android:id="@+id/zeroButtonID"
        android:onClick="digitFunction"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="0"
        android:layout_marginRight="5dp"
        android:textStyle="bold"
        android:textSize="50dp">
    </Button>
    <Button
        android:id="@+id/pointButtonID"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="."
        android:layout_marginRight="5dp"
        android:textStyle="bold"
        android:textSize="50dp">
    </Button>
    <Button
        android:id="@+id/resultButtonID"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="="
        android:textStyle="bold"
        android:textSize="50dp">
    </Button>

</LinearLayout>
</LinearLayout>